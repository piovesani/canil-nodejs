{{>partials/header}}

{{#banner}}
    <section class="{{ background }} banner"></section>
    <h2>{{ title }} disponíveis para adoção</h2>
{{/banner}}

<div class="container list">
    {{#list}}
        <div class="item">
            <img src="images/{{ image }}" class="item--image" />
            <div class="item-desc">
                <div class="item--name">{{ name }}</div>
                <div class="item--color"><span>Cor: </span>{{ color }}</div>
                <div class="item--genre"><span>Gênero: </span>{{ sex }}</div>
            </div>
            
        </div>
    {{/list}}
</div>

{{^list}}
<div class="container no-list">
    <h2>Não existe registro para está busca!!!</h2>
</div>
{{/list}}

{{>partials/footer}}